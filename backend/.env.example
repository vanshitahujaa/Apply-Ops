# ApplyOps Backend Environment Variables

# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/applyops?schema=public"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_REDIRECT_URI="http://localhost:4000/api/auth/google/callback"

# Gmail OAuth (for email tracking)
GMAIL_REDIRECT_URI="http://localhost:4000/api/auth/gmail/callback"

# OpenAI (for resume analysis & cover letter generation)
OPENAI_API_KEY="your-openai-api-key"

# App
PORT=4000
NODE_ENV=development
FRONTEND_URL="http://localhost:3000"

# File Storage (S3 or local)
STORAGE_TYPE="local"
UPLOAD_DIR="./uploads"
